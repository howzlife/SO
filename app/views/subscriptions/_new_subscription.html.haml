= form_for @subscription do |f|
  = f.hidden_field :stripe_card_token 
  .field
    = label_tag :card_number, "Credit Card Number"
    = text_field_tag :card_number, nil, name: nil
  .field
    = label_tag :card_code, "Security Code on Card (CVV)"
    = text_field_tag :card_code, nil, name: nil
  .field
    = label_tag :card_month, "Card Expiration"
    = select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"}
    = select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"}
  .field
    = label_tag :country, "Country"
    = text_field_tag :country, nil, name: nil
  .field
    = label_tag :address, "Billing Address"
    = text_field_tag :address, nil, name: nil
  .field
    = label_tag :city, "City"
    = text_field_tag :city, nil, name: nil
  .field
    = label_tag :state, "State/Province"
    = text_field_tag :state, nil, name: nil
  .field
    = label_tag :postal_code, "Zip/Postal Code"
    = text_field_tag :postal_code, nil, name: nil
  .field 
    = label_tag :plan, "Pick a Plan!"
    = select :plan, nil, :options_for_select => [["Basic Plan $20/month", "basic_plan"], ["Better Plan $30/month","better_plan"]]

  #stripe_error
    %noscript JavaScript is not enabled and is required for this form. First enable it in your web browser settings.
  .form-actions
    = f.submit "Submit"