= simple_form_for(@subscription) do |f|
  = f.error_notification
  = f.hidden_field :stripe_card_token 
  %br
  .wrapper
    .field 
      = label_tag :plan, "Pick a Plan!"
      = select :plan, nil, :options_for_select => ["basic_plan", "better_plan"]
    .form-actions
      = f.button :submit, "Update Plan", :name => "update_plan"
    %br
    .field
      = label_tag :card_number, "Credit Card Number"
      = text_field_tag :card_number, nil, name: nil
    .field
      = label_tag :card_code, "Security Code on Card (CVV)"
      = text_field_tag :card_code, nil, name: nil
    .field
      = label_tag :card_month, "Card Expiration"
      = select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"}
      = select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"}
    .field
    = f.button :submit, "Update Card Information", :name => "update_card", :data => { :confirm => 'Are you sure? This card will now be the default card used for payments' }, class: "update_card"

  #stripe_error
    %noscript JavaScript is not enabled and is required for this form. First enable it in your web browser settings.
    %br
    .field
      = f.button :submit, "Cancel Subscription", :name => "cancel", :method => "delete", :data => { :confirm => 'Are you sure? This will cancel your subscription and close your account.' }
