= simple_form_for(@company) do |f|
	- if action_name == "edit"
		= render :partial => "shared/header", :locals => {:title => "Settings",:icon => "fa-cog", :hasbutton => true, :button => "Save Settings"}
		.contents.section.clear
			.section-description
				%h3 Company Details
				%p Provide information about your company. The email address is the address from which your purchase orders will be sent
			.section-content
				.card
					= f.error_notification
					.form-inputs
						= f.input :name, required: true
					.form-inputs
						= f.input :email, required: true
					.form-inputs.phone
						= f.input :fax
					.form-inputs.phone
						= f.input :telephone
		.contents.section.clear
			.divider
			.section-description
				%h3 Purchase Orders
				%p Customize the purchase orders.
			.section-content
				.card
					.form-inputs
						= f.input :prefix, required: true
