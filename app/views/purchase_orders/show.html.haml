= render :partial => "shared/header", :locals => {:title => "Purchase Order "+@purchase_order.number,:icon => "fa-list-alt"}
.wrapper
	#purchaseorder.card.purchaseorder.saved
		.purchaseorder-header.clear
			.purchaseorder-number
				.text-label Purchase Order
				.number
					= @purchase_order.number
			.purchaseorder-address
				=@company.name
				%br
				47 Main St.
				%br
				Ottawa, Ontario K1S 1B1
			.purchaseorder-date
				.text-label Date Sent
				.date
					=@purchase_order.date.strftime("%B #{@purchase_order.date.day.ordinalize}, %Y")
		.purchaseorder-vendor.clear
			.to
				Send To
			.vendor-select
				.vendor-details
					=@purchase_order.vendor.name
					%br
					Attention: 
					=@purchase_order.vendor.contact
					%br
					=@purchase_order.vendor.email
			.date-required
				Date Required
			.date-field
				=@purchase_order.date_required
		.purchaseorder-input
			= simple_format(@purchase_order.description)
		.purchaseorder-deliverto.clear
			.to
				Deliver To
			.deliverto-select
				.deliverto-details
					-deliver_to = eval(@purchase_order.deliver_to)
					=deliver_to['name']
					%br
					=deliver_to['address']
					%br
					=deliver_to['agent']
					%br
					
	.buttons
		= link_to purchase_orders_path, class: 'btn btn-cancel' do
			%i.fa.fa-undo.fa-fw
			%span.text Back
		= link_to @purchase_order, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-cancel' do
			%i.fa.fa-trash.fa-fw
			%span.text Delete Purchase Order
		= link_to '#', class: 'btn btn-edit print' do
			%i.fa.fa-print.fa-fw
			%span.text Print
	.credits
		%p= 'Created with Swiftorders -- swiftorders.com'
