= render :partial => "shared/header", :locals => {:title => "Purchase Orders",:icon => "fa-pencil-square-o", :hasbutton => true, :button => "Create New PO" }
- if @purchase_orders.length == 0
	.firstrun
		No purchase orders found. Click the button above to create a new one.
- else
	%table#searchable-table.sortable
		%thead
			%tr
				%th.text-label
					PO Number
					.arrow
				%th.text-label
					Date Sent
					.arrow
				%th.text-label
					Vendor
					.arrow
				%th.text-label
					Label
					.arrow
				%th.text-label
					Status
					.arrow
		%tbody
			- @purchase_orders.each do |purchase_order|
				%tr{class: "status-#{purchase_order.status}"}
					%td= link_to purchase_order.number, purchase_order
					%td= purchase_order.date.strftime("%B #{purchase_order.date.day.ordinalize}, %Y")
					%td= purchase_order.vendor.name
					%td= link_to 'Destroy', purchase_order, :method => :delete, :data => { :confirm => 'Are you sure?' }
					%td= purchase_order.label
					%td
						%span{class: "label status-#{purchase_order.status}"}= purchase_order.status.capitalize
				-#= %td= link_to 'Show', purchase_order
				-#= %td= link_to 'Edit', edit_purchase_order_path(purchase_order)
	= paginate @purchase_orders
.page-footer.clear
	%span < >
