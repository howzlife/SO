.wrapper.section.clear
	.section-description
		%h3 Vendor Details
		%p Provide information about your vendors. The email address is the address to which the purchase orders will be sent.
	.section-content
		.card
			= simple_form_for @vendor do |f|
				- if @vendor.errors.any?
					#error_explanation
						%h2= "#{pluralize(@vendor.errors.count, "error")} prohibited this vendor from being saved:"
						%ul
							- @vendor.errors.full_messages.each do |msg|
								%li= msg
				.form-inputs
					= f.input :name, label: 'Vendor name'
				.form-inputs
					= f.input :contact, label: 'Contact name'
				.form-inputs
					= f.input :email, label: 'Email address'
				.form-inputs.phone
					= f.input :telephone
				.form-inputs.phone
					= f.input :fax
				.buttons
					= link_to vendors_path, class: 'btn btn-cancel' do
						%i.fa.fa-undo.fa-fw
						%span.text Cancel
					- if action_name == "edit"
						= link_to @vendor, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-cancel' do
							%i.fa.fa-trash.fa-fw
							%span.text Delete Vendor
					= button_tag(type: 'submit', class: "btn btn-add") do
						%i.fa.fa-save.fa-fw
						%span.text Save Vendor

