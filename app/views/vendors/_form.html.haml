= simple_form_for @vendor do |f|
  - if @vendor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vendor.errors.count, "error")} prohibited this vendor from being saved:"
      %ul
        - @vendor.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.input :email
  = f.input :contact
  = f.input :telephone
  = f.button :submit, 'Save Vendor', class: 'btn btn-add'
