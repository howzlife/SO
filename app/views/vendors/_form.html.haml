= form_for @vendor do |f|
  - if @vendor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vendor.errors.count, "error")} prohibited this vendor from being saved:"
      %ul
        - @vendor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :contact
    = f.text_field :contact
  .field
    = f.label :telephone
    = f.text_field :telephone
  .actions
    = f.submit 'Save Vendor', :class => 'btn btn-add'
    	i.fa.fa-floppy-o
