= render :partial => "shared/header", :locals => {:title => "Your Vendors",:icon => "fa-bus", :hasbutton => true, :button => "Create New Vendor" }
- if @vendors.length == 0
	.firstrun
		You have yet to added any vendors. Click the button below to create your first one.
		= button_to new_vendor_path, method: 'get', class: 'btn btn-add' do
			%span.text New Vendor
- else
	.contents
		= form_tag vendors_path, :class => "search-area", :method => :get do
			%i.fa.fa-search.fa-fw
			= text_field_tag :q, nil, :class => "search-query", :placeholder => "Start typing to search for vendors..."
		%table#searchable-table.sortable
			%thead
				%tr
					%th.text-label
						Name
						.arrow
					%th.text-label
						Email
						.arrow
					%th.text-label
						Contact
						.arrow
					%th.text-label
						Telephone
						.arrow
					%th.text-label
						Fax
						.arrow
			%tbody
				- @vendors.each do |vendor|
					%tr
						%td= link_to vendor.name, edit_vendor_path(vendor)
						%td= vendor.email
						%td= vendor.contact
						%td= vendor.telephone
						%td= vendor.fax
	.page-footer.clear
		= render "pager"