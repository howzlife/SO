<body>
  <nav class="clearfix">
    <h1><a href="/marketing"><%= image_tag "swiftordersLogo.jpg" %></a></h1>
    <div class="navButtons">
      <a href=""><button>Features</button></a>
      <a href="/pricing"><button>Pricing</button></a>
      <a href=""><button>Help</button></a>
      <a href="/login"><button>Log In</button></a>
      <a href="/signup"><button class="signUpButton">Sign Up Free</button></a>
    </div> <!-- end navButtons -->
  </nav>
  <header class="clearfix">
    <h2>Absolutely Easy Purchase Orders<span>for</span>Your Modern Business</h2>
    <h3>Swiftorders is cloud based software for better business purchasing.</h3>
    <h3>Get started now â€” it's free for 30 days.</h3>
    <p>No credit card required</p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
          <%= f.input :email, required: true, placeholder: 'Your Email Address' %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), placeholder: 'Your Password' %>
          <%= f.button :submit, "Begin Free Trial" %>
      <% end %>
